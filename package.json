{
  "name": "kennitala",
  "version": "2.0.3",
  "description": "Icelandic social security number (kennitölur) utilities for servers and clients",
  "author": "Hermann Björgvin Haraldsson <hermann@hermann.is>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/HermannBjorgvin/Kennitala.git"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "import": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "require": {
      "types": "./dist/index.d.cts",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "rimraf dist && npm run build:esm && npm run build:cjs && npm run build:types:cjs && npm run build:types",
    "build:esm": "esbuild src/index.ts --bundle --platform=node --format=esm --outfile=dist/index.js",
    "build:cjs": "esbuild src/index.ts --bundle --platform=node --format=cjs --outfile=dist/index.cjs",
    "build:types": "tsc --declaration --emitDeclarationOnly --outFile dist/index.d.ts",
    "build:types:cjs": "tsc --declaration --emitDeclarationOnly --outFile dist/index.d.cts --module CommonJS",
    "postbuild:types:cjs": "mv dist/index.d.ts dist/index.d.cts",
    "lint": "eslint 'src/**/*.{ts,tsx}' 'tests/**/*.{ts,tsx}'",
    "test": "jest"
  },
  "keywords": [
    "kennitala",
    "iceland",
    "national-id",
    "validation",
    "typescript"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.14.0",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.14.0"
  }
}
